#include <stdio.h>

int IndefOf(char text[],char target[] ) {
    int textLength = 0;
    int targetLength = 0;

    // Считаем длину text
    while (text[textLength] != '\0') {
        textLength++;
    }

    // Считаем длину target
    while (target[targetLength] != '\0') {
        targetLength++;
    }

    // Ищем target в text
    int foundIndex = -1;
    for (int i = 0; i <= textLength - targetLength; i++) {
        int match = 0;
        for (int j = 0; j < targetLength; j++) {
            if (text[i + j] == target[j]) {
                match++;
            }
        }
        if (match == targetLength) {
            foundIndex = i;
            break;
        }
    }
    
    return foundIndex;
}

int main() {
    char text[] = "the cat on the  mat";
    char target[] = "cat";
    
    int itog = IndefOf(text, target);
    printf("%d", itog);
    return 0;
}
